<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Website</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><%= bio.name %></td>
        <td><%= bio.website %></td>
        <td><%= bio.city %></td>
        <td><%= link_to 'Ver', bio %></td>
        <td><%= link_to 'Editar', edit_bio_path(bio) %></td>
        <td><%= link_to 'Destruir', bio, method: :delete, data: { confirm: 'Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

